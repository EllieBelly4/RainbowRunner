Avatar extends Avatar
{
	HitPoints = 51200;
	ManaPoints = 51200;

	static Description extends AvatarDesc
	{
		Speed = 30;
		TurnRate = 720;
		FactionID = 0;

		StartSector = "Tutorial";
		StartSpawnPoint = "Start";

		DeathGoldPenalty = 0;
		DeathExpPenalty = 0;

		Strength = 10;
		Agility = 10;
		Toughness = 10;
		Power = 10;

		StunResist = 4;

		DefaultSkillsObject = avatar.base.Skills;
		DefaultEquipmentObject = avatar.base.Equipment;
		DefaultInventoryObject = avatar.base.Inventory;
		DefaultBehaviorObject = avatar.base.UnitBehavior;
		DefaultBankObject = avatar.base.Bank;

		StartingCurrency = 100;
		StartingInventoryList = avatar.base.StartingInventory;
		StartingCheckpointList = avatar.base.StartingCheckpointList;
	}

	static Object extends EntityObject
	{
		static Visual extends MountedVisual
		{
			Visual = "";
		}

		static Description extends EntityObjectDesc
		{
			MinX = -3;
			MinY= -3;
			MinZ = 0;
			MaxX = 3;
			MaxY = 3;
			MaxZ = 15;
		}
	}

	static LevelEffect extends Effect
	{
		Lifetime = 60;
		LingerTime = 30;

		static Description extends EffectDesc
		{
			MinX = -5;
			MinY= -5;
			MinZ = 0;
			MaxX = 5;
			MaxY = 5;
			MaxZ = 5;

			static Visual extends MountedVisual
			{
				Visual = level_effect;
			}
		}
	}
}
